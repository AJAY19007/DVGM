<%= form_for @lecture, :html => {:class => "w3-container w3-card-4 w3-margin"} do |f| %>
  <%= render 'shared/errors', object: @lecture %>
  <div class="w3-row w3-section">
    <div class="w3-col" style="width: 100px"><%= f.label :name %></div>
    <div class="w3-rest"><%= f.text_field :name %></div>
  </div>
  <div class="w3-row w3-section">
    <div class="w3-col" style="width: 100px"><%= f.label :lecturer %></div>
    <div class="w3-rest"><%= f.select(:lecturer_id, User.where(:role => "lecturer").collect {|p| [ p.login, p.id ] }) %></div>
  </div>
  <div class="w3-center">
    <%= f.submit class: "w3-button w3-light-blue w3-margin" %>
  </div>
<% end %>
