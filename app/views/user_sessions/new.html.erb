<%= form_for @user_session, :url => sign_in_path do |f| %>
  <%= render 'shared/errors', object: @user_session %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>
